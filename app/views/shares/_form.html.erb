<%= form_with model: user_password, url: password_shares_path(password) do |form| %>
  <div class="mb-4">
    <%= form.label :user_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  
  <div class="mb-4">
    <%= form.label :role, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :role, UserPassword::ROLES.map { |r| [r.titleize, r] }, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.submit "Share", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<%= form_with model: password do |form| %>
  <div class="w-1/2 mx-auto p-4">
    <% if form.object.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4 rounded">
        <ul>
          <% form.object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :url, class: "block text-gray-700 font-bold" %>
      <%= form.text_field :url, class: "w-full px-3 py-2 text-gray-700 border rounded" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :username, class: "block text-gray-700 font-bold" %>
      <%= form.text_field :username, class: "w-full px-3 py-2 text-gray-700 border rounded" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :password, class: "block text-gray-700 font-bold" %>
      <%= form.text_field :password, class: "w-full px-3 py-2 text-gray-700 border rounded" %>
    </div>
    
    <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= button_tag "Delete", class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", form: "delete_password" %>
  </div>
<% end %>

<%= form_with model: password, method: :delete, id: "delete_password", data: { turbo_confirm: "Are You Sure?" } %>
